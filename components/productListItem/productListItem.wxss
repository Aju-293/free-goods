/* components/productListItem/productListItem.wxss */
.product-list-item-wraper {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: center;
}

.product-list-item-wraper > .list {
  width: 47%;
  margin: 3% 1.5% 0;
  padding: 20rpx;
  box-sizing: border-box;
  background: white;
  border-radius: 10rpx;
  box-shadow: 1px 2px 3px rgb(224, 224, 224);
}
.product-list-item-wraper > .list >view.img {
  width: 100%;
  height: 200rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.product-list-item-wraper > .list >view.img image {
  width: 100%;
  height: 100%;
  align-content: center;
}
.product-list-item-wraper > .list >view text {
  font-size: 26rpx;
}
